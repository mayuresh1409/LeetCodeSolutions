class Solution {
    public double findMedianSortedArrays(int[] nums1, int[] nums2) {
        int l = nums1.length + nums2.length;
        int[] nums3 = new int[l];
        double r = 0;

        int count = 0;
        for(int i=0; i<nums1.length; i++){
            nums3[count] = nums1[i];
            count++;
        }
        for(int i=0; i<nums2.length; i++){
            nums3[count] = nums2[i];
            count++;
        }

        Arrays.sort(nums3);

        if(l%2 != 0){
            int len = (l/2);
            return nums3[len];
        }else{
            int len = l/2;
            return (double)(nums3[len] + nums3[len-1]) / 2;
        }
    }
}